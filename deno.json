{
  "version": "0.0.1",
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test --allow-read --allow-write --allow-net",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.6"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "always",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "./node_modules",
      ".git"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
  }
}